<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="139dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/service1"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars[6]" />

        <ImageView
            android:id="@+id/service2"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <ImageView
            android:id="@+id/service3"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars[0]" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="139dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/service4"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <ImageView
            android:id="@+id/service5"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            tools:srcCompat="@tools:sample/avatars[11]" />

        <ImageView
            android:id="@+id/service6"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            tools:srcCompat="@tools:sample/avatars[0]" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="139dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/service7"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            tools:srcCompat="@tools:sample/avatars[15]" />

        <ImageView
            android:id="@+id/service8"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            tools:srcCompat="@tools:sample/avatars[7]" />

        <ImageView
            android:id="@+id/service9"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_logo_foreground"
            tools:srcCompat="@tools:sample/avatars[14]" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>